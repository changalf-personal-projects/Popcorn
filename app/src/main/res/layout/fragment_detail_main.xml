<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.popcorn.BuildConfig"
        tools:ignore="MergeRootFrame">

        <ImageView
            android:id="@+id/backdrop_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_poster_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_title_top_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/detail_title_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating_label"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/detail_text_left_margin"
                        android:layout_marginStart="@dimen/detail_text_left_margin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/runtime_label"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/detail_text_left_margin"
                        android:layout_marginStart="@dimen/detail_text_left_margin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/release_label"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/detail_text_left_margin"
                        android:layout_marginStart="@dimen/detail_text_left_margin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_release_and_genres_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genre_label"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/genres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/detail_genres_right_margin"
                        android:layout_marginLeft="@dimen/detail_text_left_margin"
                        android:layout_marginRight="@dimen/detail_genres_right_margin"
                        android:layout_marginStart="@dimen/detail_text_left_margin" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider. -->
        <include layout="@layout/detail_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_label_margin"
                android:text="@string/synopsis_label"
                android:textColor="@color/black"
                android:textSize="@dimen/detail_label_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_synopsis_bottom_margin"
                android:layout_marginEnd="@dimen/detail_synopsis_left_and_right_margin"
                android:layout_marginLeft="@dimen/detail_synopsis_left_and_right_margin"
                android:layout_marginRight="@dimen/detail_synopsis_left_and_right_margin"
                android:layout_marginStart="@dimen/detail_synopsis_left_and_right_margin" />

        </LinearLayout>

        <!-- Divider. -->
        <include layout="@layout/detail_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_label_margin"
                android:text="@string/trailers_label"
                android:textColor="@color/black"
                android:textSize="@dimen/detail_label_size"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trailer_button"
                android:paddingLeft="@dimen/trailer_button_left_right_padding"
                android:paddingStart="@dimen/trailer_button_left_right_padding"
                android:paddingRight="@dimen/trailer_button_left_right_padding"
                android:paddingEnd="@dimen/trailer_button_left_right_padding"
                android:text="@string/view_trailers"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/trailer_button"
                android:layout_marginBottom="@dimen/detail_button_bottom_margin" />

            <include layout="@layout/detail_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_label_margin"
                android:text="@string/cast_label"
                android:textColor="@color/black"
                android:textSize="@dimen/detail_label_size"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cast_button"
                android:paddingLeft="@dimen/cast_button_left_right_padding"
                android:paddingStart="@dimen/cast_button_left_right_padding"
                android:paddingRight="@dimen/cast_button_left_right_padding"
                android:paddingEnd="@dimen/cast_button_left_right_padding"
                android:text="@string/view_cast"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/cast_button"
                android:layout_marginBottom="@dimen/detail_button_bottom_margin" />

            <include layout="@layout/detail_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detail_label_margin"
                android:text="@string/reviews_label"
                android:textColor="@color/black"
                android:textSize="@dimen/detail_label_size"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/review_button_left_right_padding"
                android:paddingStart="@dimen/review_button_left_right_padding"
                android:paddingRight="@dimen/review_button_left_right_padding"
                android:paddingEnd="@dimen/review_button_left_right_padding"
                android:text="@string/read_reviews"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/review_button"
                android:layout_marginBottom="@dimen/detail_button_bottom_margin" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:scrollbars="vertical" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>