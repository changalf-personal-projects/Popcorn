<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/tabs_and_posters_divider"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.popcorn.MainActivity">

    <ProgressBar
        android:layout_width="@dimen/progress_bar_dims"
        android:layout_height="@dimen/progress_bar_dims"
        android:id="@+id/progress_bar"
        android:layout_gravity="center"
        android:visibility="visible"
        android:background="@color/progress_bar_color" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cast_recyclerview"
        android:scrollbars="vertical" />

</FrameLayout>