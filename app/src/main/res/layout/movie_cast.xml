<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:layout_marginLeft="@dimen/detail_cast_member_left_margin"
    android:layout_marginStart="@dimen/detail_cast_member_left_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cast_member_image"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="@dimen/detail_cast_name_width"
        android:layout_height="wrap_content"
        android:id="@+id/cast_member_name"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:paddingRight="@dimen/detail_cast_name_right_padding"
        android:paddingEnd="@dimen/detail_cast_name_right_padding"
        android:layout_marginTop="@dimen/detail_cast_name_top_margin"
        android:layout_marginLeft="@dimen/detail_cast_name_left_margin"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:layout_width="@dimen/detail_cast_character_width"
        android:layout_height="wrap_content"
        android:id="@+id/cast_member_character"
        android:textColor="@color/detail_font_color"
        android:textStyle="italic"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:layout_marginTop="@dimen/detail_cast_name_top_margin"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>