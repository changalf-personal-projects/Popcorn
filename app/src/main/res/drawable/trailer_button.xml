<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:shape="rectangle">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trailer_button_corner_radius" />
            <stroke android:width="@dimen/trailer_button_stroke_width" android:color="@color/lightGreenTest" />
            <gradient android:angle="-90" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trailer_button_corner_radius" />
            <stroke android:width="@dimen/trailer_button_stroke_width" android:color="@color/greenTest" />
            <gradient android:angle="-90" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/trailer_button_corner_radius" />
            <stroke android:width="@dimen/trailer_button_stroke_width" android:color="@color/blueTest" />
            <gradient android:angle="-90" />
        </shape>
    </item>

</selector>