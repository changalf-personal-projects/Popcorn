<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:shape="rectangle">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/button_color" />
            <gradient android:startColor="@color/button_color" android:endColor="@color/button_color" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/greenTest" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/blueTest" />
        </shape>
    </item>

</selector>